<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :area %>
  <br>
  <%= f.select :area,
  [["キタ","キタ"],
  ["ミナミ","ミナミ"],
  ["天王寺","天王寺"],
  ["大阪城公園","大阪城公園"],
  ["その他","その他"]],
  include_blank: "選択してください", class: 'form-control' %>
  <br>
  <%= f.label :address %>
  <%= f.text_field :address, class: 'form-control' %>
  <%= f.label :act %>
  <%= f.text_field :act, class: 'form-control' %>
  <%= f.label :content %>
  <%= f.text_area :content, class: 'form-control' %>
  <%= f.label :url %>
  <%= f.text_area :url, placeholder: "http://", class: 'form-control' %>
  <%= f.label :live_on %>
  <br>
  <%= f.date_select :live_on, class: 'form-control' %>
  <br>
  <%= f.label :live_from_at %>
  <br>
  <%= f.time_select :live_from_at, class: 'form-control' %>
  <br>
  <%= f.label :live_to_at %>
  <br>
  <%= f.time_select :live_to_at, class: 'form-control' %>
  <br>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>